@model ActorCategoryVm
<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">Add new Movie</h2>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" name="CinemaId" value="@ViewBag.CinemaId" />
                <div class="mb-3">
                    <label for="Title" class="form-label">Title</label>
                    <input class="form-control" name="Title">
                </div>
                <div class="mb-3">
                    <label for="Img" class="form-label">Img</label>
                    <input type="file" class="form-control" name="Img">
                </div>
                <div class="mb-3">
                    <label for="SubImgs" class="form-label">Sub Imgs</label>
                    <input type="file" class="form-control" name="SubImgs" multiple>
                </div>
                <div class="mb-3">
                    <label for="Description" class="form-label">Description</label>
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Leave a Description here" name="Description" style="height: 100px"></textarea>
                        <label for="Description">You Description Here...</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="DateTime" class="form-label fw-bold">Show Time</label>
                    <input type="datetime-local"
                           class="form-control"
                           name="DateTime"
                           id="DateTime"
                           required />
                    <small class="text-muted">Select the movie’s show date and time.</small>
                </div>
                <div class="mb-3">
                    <label for="Price" class="form-label">Price</label>
                    <input class="form-control" name="Price">
                </div>
                <div class="mb-3">
                    <label for="CategoryId" class="form-label">Category</label>
                    <select name="CategoryId" class="form-select">
                        @foreach (var item in Model.Categories)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="border rounded p-3" style="max-height: 200px; overflow-y: auto;">
                    @foreach (var actor in Model.Actors)
                    {
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="actors_id"
                                   value="@actor.Id"
                                   id="actor_@actor.Id" />
                            <label class="form-check-label" for="actor_@actor.Id">
                                <img src="~/images/Actor_images/@actor.Img"
                                     alt="@actor.Name"
                                     style="width: 40px; height: 40px; object-fit: cover; border-radius: 50%; border: 1px solid #ccc; margin-right: 5px;" />
                                @actor.Name
                            </label>
                        </div>
                    }
                </div>

                @* <div class="mb-3">
                    <label for="BrandId" class="form-label">Brand</label>
                    <select name="BrandId" class="form-select">
                        @foreach (var item in Model.Brands)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div> *@
                <div class="mb-3">
                    <label for="Status" class="form-label">Status</label>
                    <select name="Status" class="form-select">
                        <option value="true" selected>Active</option>
                        <option value="false">InActive</option>
                    </select>
                </div> 
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
